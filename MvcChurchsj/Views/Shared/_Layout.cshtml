<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My Mvc4</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
  
    
    
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  
    <link href="~/Content/Stylechurch.css" rel="stylesheet" />

    <style type="text/css">

    
     .item{
    background: #333;    
    text-align: center;
    height: 300px;
    width: 100%;
}
   
html, body {height: 100%}
.sidebar{
    background-color:#FFF7EF;
  
    position:relative;
    top: 0;
    bottom: 0;
    right: 0;
    /*left:14px;*/
    padding-top:20px;
    /*padding-right:10px;*/
    padding-bottom:20px;
   /*padding:20px;*/

}
 .sidepanel ul{
     padding-left:20px;
     padding-right:10px;
        }
.contentmain{
    
    padding-top:20px;
    padding-right:15px;
    padding-left:15px;
    padding-bottom:20px;
    background-color:#FFFFEB;

   /* right:30px;*/
    
}

.wrap {
    min-height: 100%;
    position: relative;
    margin-top:15px;
    background-color:#FFFFEB;
    left:15px;
    margin-right:30px;
    
  
}


 
  
  .servic {
padding-left:30px;
        }
 
    </style>
</head>
<body>

    <div class="container headmain">
        <div class="row">
            <div class="col-xs-9">
                <h1>St.Joseph's East Maitland Church</h1>
            </div>
            <div class="col-xs-3">
                
                           
                  @Html.Partial("_LoginPartial")
                        
            </div>
        </div>
    </div>


    <div class="container navmain">

        <nav role="navigation" class="navbar navbar-default">

            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header ">
                        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!-- Collection of nav links, forms, and other content for toggling -->
                    <div id="navbarCollapse" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                            <li>@Html.ActionLink("News & Events", "Newsevent", "Home")</li>
                            <li>@Html.ActionLink("Services", "Service", "Home")</li>
                            <li>@Html.ActionLink("Activities", "Activity", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>

                        </ul>
                        <form role="search" class="navbar-form navbar-left">
                            <div class="form-group">
                                <input type="text" placeholder="Search" class="form-control">
                                <button class="btn btn-default searchcolor" type="submit">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                </button>

                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>

        </nav>
    </div>


    <div class="container">
        <!----<div class="jumbotron">-->
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-responsive spic" src="~/Cimage/IMG_7508.JPG" alt="im1" />
                            <div class="carousel-caption">
                                ...
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive spic" src="~/Cimage/IMG_7064.JPG" alt="im2" />
                            <div class="carousel-caption">
                                ...
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive spic" src="~/Cimage/IMG_7591.JPG" alt="im3" />
                            <div class="carousel-caption">
                                ...
                            </div>
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <!---- </div>-->
       <!---- <div class="container">--->
            <div class="row">
               


                    <div class="wrap">
                       
                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9 contentmain">
                            @RenderSection("featured", required: false)

                             <section>
                                @RenderBody()


                               
                            </section>



                          </div>
                        

                         <!-------------------------SIDEBAR------------------------------------>

                        <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 sidebar">

                           
                             <div class="panel panel-warning">
                         <div class="panel-heading"><strong>Upcoming Events</strong></div>
                        <div class="panel-body">
                                Panel content
                             </div>
                            </div>

                        
                           
                            
                             <div class="panel panel-warning">
                         <div class="panel-heading"><strong>Latest News</strong></div>
                        <div class="panel-body">
                                Panel content
                             </div>
                            </div>
                           
  <div class="panel panel-warning">
  <div class="panel-heading"><strong>Our Parish</strong></div>
  <div class="panel-body sidepanel">
      <ul>
         <li>@Html.ActionLink("Clergy & Staff", "our_people", "Home")</li>
          <li>@Html.ActionLink("History", "History", "Home")</li>
          <li>@Html.ActionLink("Regular Mass", "Service", "Home")</li>
          <li><a href="#">School</a></li>
          <li>@Html.ActionLink("Location", "Contact", "Home")</li>
          <li><a href="#">Contact Parish</a></li>
          
      </ul>
  </div>
</div>


                        </div> 
       <!-------------------------END SIDEBAR------------------------------------>


            <div style="clear:both"></div>
             </div>
          </div>
        <!----- </div>--->

        <!---- </div>---->
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <footer>
                    <p>&copy; @DateTime.Now.Year - St.Joseph's East Maitland Church</p>

                </footer>
            </div>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <hr>
    </div>


</body>
</html>
